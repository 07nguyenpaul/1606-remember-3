<section class='reminders-container'>
  {{search-bar value=search searchUpdated=(action "updateSearch")}}
  {{#each reminders as |reminder|}}
  <article>
    <h1 class="reminder-title">
      {{#link-to 'reminders.reminder' reminder.id class="spec-reminder-item title-link"}}
        {{reminder.title}}
      {{/link-to}}
    </h1>
    <p class="reminder-date">{{reminder.date}}</p>
    <h3 class="unsaved-changes"
        hidden={{unless reminder.hasDirtyAttributes 'true'}}>
        This reminder has unsaved changes
    </h3>
    <button
    class="delete-reminder"
    {{action 'remove' reminder}}>
    delete
  </button>
  </article>
  {{/each}}
  <button>
    {{#link-to 'reminders.new' class="add-reminder-button"}}
    Add Reminder
    {{/link-to}}
  </button>
</section>

{{outlet}}
